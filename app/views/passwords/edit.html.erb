<div class="mx-auto container pt-20 lg:flex lg:gap-x-16 lg:px-8">
  <%= render 'shared/profile_sidebar' %>

  <main class="lg:ml-64 px-8 my-8 lg:flex-auto">
    <div>
      <h2 class="text-2xl font-semibold leading-7 text-gray-900">Update Password</h2>
    </div>

    <div class="flex flex-col mt-4">
          <div class="relative py-6">
            <div class="absolute inset-0 flex items-center" aria-hidden="true">
              <div class="w-full border-t border-gray-300"></div>
            </div>
          </div>

          <div>
            <h3 class="text-xl font-medium text-gray-900">Password</h3>
            <%= form_with model: current_user, url: password_path, class:'mt-6 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6' do |f| %>
            
              <div class="sm:col-span-3">
                <%= f.password_field :password, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
              </div>

              <div class="col-span-full">
                <%= f.submit "Save", class:"cursor-pointer mt-2 flex items-center justify-center rounded-md border border-transparent bg-primary px-8 py-3 text-base font-medium text-white hover:bg-primary-dark focus:outline-none focus:ring-1 focus:ring-primary focus:ring-offset-2" %>
              </div>
            <% end %>
          </div>
        </div>
    </main>
</div>
