<div class="mx-auto max-w-7xl lg:flex lg:gap-x-16 lg:px-8">
  <%= render 'shared/owner_sidebar' %>
  
  <main class="px-8 my-8 lg:flex-auto">
    <div>
      <div class="flex justify-between items-center">
        <h2 class="text-2xl font-semibold leading-7 text-gray-900">Properties</h2>
        <%= link_to 'Add property', new_owner_property_path, class:"flex h-10 items-center justify-center rounded-md border border-transparent bg-primary px-4 py-1 text-base font-medium text-white hover:bg-primary-dark focus:outline-none" %>
      </div>

      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:gap-x-8 overflow-y-auto h-[calc(100vh-112px)] pr-4">
        <% @properties.each do |property| %>
          <div class="flex flex-col ">
            <%= render 'properties/property_item', property: property, minimal_details: false %>
            <div class="flex justify-between items-center">
              <%= link_to "Edit", edit_owner_property_path(property), class:"text-primary underline hover:text-primary-dark mt-2" %>
              <%= link_to "Delete", owner_property_path(property), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?" },
                    class:"text-primary underline hover:text-primary-dark mt-2" %>
            </div>
          </div>
        <% end %>
      </div>    
    </div>
  </main>
</div>
