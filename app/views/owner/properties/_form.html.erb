<%# property info %>
<div class="px-8 py-8 border rounded-md lg:flex-auto my-8">
	<div>
	  <h2 class="text-base font-semibold leading-7 text-gray-900">Property Information</h2>

	  <%= form_with model: @property, url: path, class:'mt-6 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6' do |f| %>

	    <div class="sm:col-span-3">
	      <%= f.label :name, class:'block text-sm font-medium leading-6 text-gray-900' %>
	      <%= f.text_field :name, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
	    </div>

	    <div class="sm:col-span-3">
	      <%= f.label :headline, class:'block text-sm font-medium leading-6 text-gray-900' %>
	      <%= f.text_field :headline, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
	    </div>

	    <div class="col-span-full">
	      <%= f.label :description, class:'block text-sm font-medium leading-6 text-gray-900' %>
	      <%= f.rich_text_area :description, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
	    </div>

	    <div class="sm:col-span-3">
	      <%= f.label :price, class:'block text-sm font-medium leading-6 text-gray-900' %>
	      <%= f.text_field :price, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
	    </div>

	    <div class="sm:col-span-3">
	      <%= f.label :guest_count, class:'block text-sm font-medium leading-6 text-gray-900' %>
	      <%= f.number_field :guest_count, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
	    </div>

	    <div class="sm:col-span-2">
	      <%= f.label :bedroom_count, class:'block text-sm font-medium leading-6 text-gray-900' %>
	      <%= f.number_field :bedroom_count, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
	    </div>


	    <div class="sm:col-span-2">
	      <%= f.label :bed_count, class:'block text-sm font-medium leading-6 text-gray-900' %>
	      <%= f.number_field :bed_count, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
	    </div>

	    <div class="sm:col-span-2">
	      <%= f.label :bathroom_count, class:'block text-sm font-medium leading-6 text-gray-900' %>
	      <%= f.number_field :bathroom_count, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
	    </div>

	    <div class="col-span-full">
	      <%= f.label :address_1, class:'block text-sm font-medium leading-6 text-gray-900' %>
	      <%= f.text_field :address_1, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
	    </div>

	    <div class="sm:col-span-3">
	      <%= f.label :address_2, class:'block text-sm font-medium leading-6 text-gray-900' %>
	      <%= f.text_field :address_2, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
	    </div>

	    <div class="sm:col-span-3">
	      <%= f.label :city, class:'block text-sm font-medium leading-6 text-gray-900' %>
	      <%= f.text_field :city, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
	    </div>

	    <div class="sm:col-span-2">
	      <%= f.label :state, class:'block text-sm font-medium leading-6 text-gray-900' %>
	      <%= f.text_field :state, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
	    </div>

	    <div class="sm:col-span-2">
	      <%= f.label :country, class:'block text-sm font-medium leading-6 text-gray-900' %>
	      <%= f.country_select :country_code, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
	    </div>

	    <div class="col-span-full">
	      <%= f.submit "Save", class:"cursor-pointer mt-2 flex items-center justify-center rounded-md border border-transparent bg-primary px-8 py-3 text-base font-medium text-white hover:bg-primary-dark focus:outline-none focus:ring-1 focus:ring-primary focus:ring-offset-2" %>
	    </div>
	  <% end %>
	</div>
</div>
