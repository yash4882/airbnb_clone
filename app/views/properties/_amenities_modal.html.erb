<div>
    <button data-action="click->modal#toggleModal" type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="static-modal">
        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
        </svg>
        <span class="sr-only">Close modal</span>
    </button>
    <div class="py-6">
        <h2 class="text-xl font-medium leading-6 text-gray-900">What this place offers</h2>
        <div class="mt-6 ">
            <% content_params[:amenities].limit(10).each do |amenity| %>
                <div class="flex py-4">
                    <%= image_tag "amenity_icons/#{amenity.icon}", class: "h-6 w-6"%>
                    <p class="ms-4 font-light"><%= amenity.name %></p>      
                </div>
                <div class="inset-0 flex items-center py-1" aria-hidden="true">
                  <div class="w-full border-t border-gray-200"></div>
                </div>
            <% end %>
        </div>
    </div>
</div>